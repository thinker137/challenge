.container {
  padding: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.booking-item {
  border: 1rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  background-color: #f9f9f9;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.booking-info {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.info-label {
  font-size: 28rpx;
  color: #666;
  width: 180rpx;
}

.info-value {
  font-size: 28rpx;
  color: #333;
}

.divider {
  height: 1rpx;
  background-color: #e0e0e0;
  margin: 10rpx 0;
}