.container {
  padding: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 20rpx;
}

.form-group {
  margin-bottom: 20rpx;
}

.picker {
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 6rpx;
  margin-top: 6rpx;
  color: #333;
}

button {
  width: 100%;
  background-color: #1aad19;
  color: white;
  font-size: 32rpx;
  padding: 12rpx 0;
  border-radius: 8rpx;
}

.result {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #07c160;
  font-weight: bold;
}