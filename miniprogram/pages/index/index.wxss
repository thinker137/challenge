.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 30rpx;
  background-color: #f7f9fc;
  min-height: 100vh;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 50rpx;
  color: #333;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.avatar-btn,
.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  overflow: hidden;
  background-color: #e0e0e0;
}

.nickname-input {
  border: 1px solid #ccc;
  border-radius: 12rpx;
  padding: 16rpx;
  width: 80%;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.nickname-text {
  font-size: 30rpx;
  color: #333;
  margin-top: 10rpx;
}

.auth-btn {
  background-color: #007aff;
  color: #fff;
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
}

.error-text {
  color: red;
  margin-top: 20rpx;
  font-size: 26rpx;
}

.next-btn {
  width: 80%;
  margin-top: auto;
  background-color: #28a745;
  border-radius: 12rpx;
  font-size: 30rpx;
}