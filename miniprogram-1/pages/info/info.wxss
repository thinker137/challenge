.container {
  display: flex;
  flex-direction: column;
  padding: 60rpx 30rpx;
  background-color: #fff;
  min-height: 100vh;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  margin-bottom: 10rpx;
  display: block;
  color: #333;
}

.input {
  border: 1px solid #ccc;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.picker-display {
  border: 1px solid #ccc;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.next-btn {
  background-color: #007aff;
  color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  font-size: 32rpx;
  margin-top: 60rpx;
}